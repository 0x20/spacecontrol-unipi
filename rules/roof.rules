rule "Roof Open"
when
	Item roof changed from OFF to ON
then
	roofDown.sendCommand(OFF)
	roofUp.sendCommand(ON)
	Thread::sleep(15000)
	roofUp.sendCommand(OFF)
end

rule "Roof Close"
when
	Item roof changed from ON to OFF
then
	roofDown.sendCommand(ON)
	roofUp.sendCommand(OFF)
	Thread::sleep(15000)
	roofDown.sendCommand(OFF)
end