 import org.openhab.model.script.actions.Timer
  
 var Timer timer = null

// == Lighting =================================================================================

rule "Front lighting"
when
	Item TopLightSwitch received update
then
	if (DebugFrontLight.state==ON) {
		DebugFrontLight.sendCommand(OFF)
	} else if (DebugFrontLight.state==OFF) {
		DebugFrontLight.sendCommand(ON)
	} else { // after reboot states are "Uninitialized"
		DebugFrontLight.sendCommand(ON)
	}
	if (Space.state!=ON) {
		if(timer!=null) {
        	timer.cancel
            timer = null
        }
		Space.send(ON)
		DebugPowerCeiling.sendCommand(ON)
		DebugPowerWall.sendCommand(ON)
	}
end

rule "Back lighting"
when
	Item BottomLightSwitch received update
then
	if (DebugBackLight.state==ON) {
		DebugBackLight.sendCommand(OFF)
	} else if (DebugBackLight.state==OFF) {
		DebugBackLight.sendCommand(ON)
	} else { // after reboot states are "Uninitialized"
		DebugBackLight.sendCommand(ON)
	}
	if (Space.state!=ON) {
		if(timer!=null) {
        	timer.cancel
            timer = null
        }
		Space.send(ON)
		DebugPowerCeiling.sendCommand(ON)
		DebugPowerWall.sendCommand(ON)
	}
end

rule "All Off"
when
	Item AllOffButton changed
then
	DebugBackLight.sendCommand(OFF)
	DebugFrontLight.sendCommand(OFF)
//	sendHttpGetRequest("http://spacecontrol.0x20.be/CMD?Space=OFF")
	Space.send(OFF)
	timer = createTimer(now.plusSeconds(300)) [|
  		PowerCeiling.sendCommand(OFF)
  		PowerWall.sendCommand(OFF)
	]
end

